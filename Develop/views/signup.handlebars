<!-- Signup Page -->


<section class="section container">
    <h2 class="center-align">Sign Up</h2>
    <div class="row">
        <div class="col s6 offset-s3">
            <form action="/signup" method="post">
                <label for="first_name">First Name:</label>
                <input type="text" id="first_name" name="first_name" placeholder="Dick" required>
                <label for="last_name">Last Name:</label>
                <input type="text" id="last_name" name="last_name" placeholder="Grayson" required>
                <label for="email">Email:</label>
                <input type="text" id="email" name="email" placeholder="not_robin@teentitans.io" required>
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" placeholder="**********" required>
                <div class="center-align">
                    <button type="submit" class="waves-effect waves-light btn-large deep-purple">Crush It!</button>
                </div>
                <div class="center-align">
                    <label for="current_user">Already a User?</label><br>
                    <a href="/login">
                    <button type="button" class="waves-effect waves-light btn-large deep-purple" id="current_user">Login Now!</button>
                    </a>
                </div>
            </form>
        </div>
    </div>
</section>
